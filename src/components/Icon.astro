  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  aria-hidden="true"
>
  {paths?.map((shape) => {
    if (shape.tag === 'path') {
      return <path d={shape.attrs.d} />;
    }
    if (shape.tag === 'rect') {
      return <rect {...shape.attrs} />;
    }
    if (shape.tag === 'circle') {
      return <circle {...shape.attrs} />;
    }
    if (shape.tag === 'line') {
      return <line {...shape.attrs} />;
    }
    return null;
  })}
</svg>
